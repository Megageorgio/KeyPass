@model KeyPass.Models.Pass

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление пропуска</h1>

<h3>Вы уверены, что хотите удалить этот пропуск?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IssueDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IssueDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExpirationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpirationDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
    <div>
        <a asp-action="Index" role="button" class="btn btn-outline-secondary">Назад</a>
    </div>
</div>
